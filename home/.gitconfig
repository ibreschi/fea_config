[user]
   name = Iacopo Breschi
   email = iacopo.breschi@deepomatic.com
[core]
   autocrlf = false
   pager = less -FXRS
   excludesfile = /home/ibreschi/.gitignore_global
   editor = vim
[merge]
   tool = kdiff3
[color]
   ui = auto
[diff]
   guitool = kdiff3
   #tool = vimdiff
   tool = meld
[pager]
   diff = delta
   log = delta
   reflog = delta
   show = delta

[interactive]
   diffFilter = delta --color-only --features=interactive
[alias]
   tree = log --graph --oneline --branches --remotes --tags --decorate --color
   tree-s = log --graph --oneline --remotes --tags --decorate --color
   tree2 = !"git tree-specific --all"
   tree-specific = log --graph --abbrev-commit --decorate --format=format:'%C(blue)%h%C(reset) - %C(green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'

#[difftool]
#   prompt = false
[submodule]
   recurse = true
[github]
   user = ibreschi
